<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.yd.controller.ResetPasswordController"
      alignment="CENTER" spacing="10"
      stylesheets="@/styles/styles.css">

    <Label text="비밀번호 재설정" styleClass="header-label"/>
    <PasswordField fx:id="newPasswordField" promptText="새 비밀번호" />
    <PasswordField fx:id="confirmPasswordField" promptText="새 비밀번호 확인" />
    <Button text="비밀번호 재설정" onAction="#handleResetPassword" styleClass="login-primary-button"/>
    <Label fx:id="messageLabel" textFill="red"/>
</VBox>